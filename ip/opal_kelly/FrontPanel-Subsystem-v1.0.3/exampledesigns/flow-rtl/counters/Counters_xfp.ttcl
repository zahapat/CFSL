<#: exampledesigns/common/board_variables.ttcl :>
<: if {$flow != "RTL" || $selection != "Counters"} { ttcl_return; }:>
<: setFileName "Counters" :>
<: setFileExtension ".xfp" :>
<: setOutputDirectory "./exampledesign":>
<: :>
<?xml version="1.0" encoding="ISO-8859-1"?>
